<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.patchie.csawttsv9.Add_contact">

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_marginStart="15dp"
        android:padding="10dp"
        android:background="@layout/rounded_border_edittext"
        android:hint="@string/hnt_et_name"
        android:inputType="text"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/et_mobile_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/et_name"
        android:layout_alignStart="@+id/et_name"
        android:layout_below="@+id/et_name"
        android:layout_marginTop="26dp"
        android:padding="10dp"
        android:background="@layout/rounded_border_edittext"
        android:hint="@string/hnt_et_mobile_phone"
        android:inputType="phone"
        android:textSize="25sp" />


    <Button
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_mobile_phone"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="45dp"
        android:layout_toStartOf="@+id/backbtn"
        android:background="@android:color/holo_blue_light"
        android:text="@string/str_btn_add" />

    <Button
        android:id="@+id/backbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_add"
        android:layout_alignBottom="@+id/btn_add"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="27dp"
        android:background="@android:color/holo_blue_light"
        android:text="@string/cancel" />


</RelativeLayout>


